<?xml version="1.0" encoding="UTF-8"?>

<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:withConfig="clr-namespace:mauitest.Buttons.WithConfig"
             xmlns:config="clr-namespace:mauitest.Buttons.WithConfig.Config"
             xmlns:system="clr-namespace:System;assembly=System.Runtime"
             x:Class="mauitest.App">
    <Application.Resources>
        <ResourceDictionary>
            <system:Double x:Key="LargeIconButtonFontSize">24</system:Double>
            <config:IconButtonConfiguration
                x:Key="DefaultIconButtonConfig"
                IconSize="{StaticResource LargeIconButtonFontSize}"
                SpacingEnabled="True"
                Color="Black" />
        </ResourceDictionary>
    </Application.Resources>
</Application>